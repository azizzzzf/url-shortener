generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("urlshortener_DATABASE_URL")
}

model Url {
  id          String   @id @default(cuid())
  originalUrl String
  shortCode   String   @unique
  visits      Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("urls")
}
